<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_holder_LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/WidgetPaddingDimensions"
    android:weightSum="100" >

    <!-- ========== First Content ======================================================================= -->

    <RelativeLayout
        android:id="@+id/widget_holder_RelativeLayout_1"
        style="@style/StyleWidgetContenHolder" >

        <TextView
            android:id="@+id/dummyBottom_TextView_1"
            style="@style/StyleDummySeparator" />

        <ImageView
            android:id="@+id/toggler_state_ImageView_1"
            style="@style/StyleWidgetContentStateLeft"
            android:layout_above="@id/dummyBottom_TextView_1" />

        <LinearLayout
            android:id="@+id/toggler_content_holder_LinearLayout_1"
            style="@style/StyleWidgetContentHolderLeft"
            android:layout_above="@id/toggler_state_ImageView_1" >

            <ImageButton
                android:id="@+id/toggler_content_ImageView_1"
                style="@style/StyleWidgetContent" />
        </LinearLayout>
    </RelativeLayout>

    <!-- ========== Second Content ====================================================================== -->

    <RelativeLayout
        android:id="@+id/widget_holder_RelativeLayout_2"
        style="@style/StyleWidgetContenHolder" >

        <TextView
            android:id="@+id/dummyBottom_TextView_2"
            style="@style/StyleDummySeparator" />

        <ImageView
            android:id="@+id/toggler_state_ImageView_2"
            style="@style/StyleWidgetContentStateCenter5x1"
            android:layout_above="@id/dummyBottom_TextView_2" />

        <LinearLayout
            android:id="@+id/toggler_content_holder_LinearLayout_2"
            style="@style/StyleWidgetContentHolderCenter5x1"
            android:layout_above="@+id/toggler_state_ImageView_2" >

            <ImageButton
                android:id="@+id/toggler_content_ImageView_2"
                style="@style/StyleWidgetContent" />
        </LinearLayout>
    </RelativeLayout>

    <!-- ========== Third Content ======================================================================= -->

    <RelativeLayout
        android:id="@+id/widget_holder_RelativeLayout_3"
        style="@style/StyleWidgetContenHolder" >

        <TextView
            android:id="@+id/dummyBottom_TextView_3"
            style="@style/StyleDummySeparator" />

        <ImageView
            android:id="@+id/toggler_state_ImageView_3"
            style="@style/StyleWidgetContentStateCenter5x1"
            android:layout_above="@id/dummyBottom_TextView_3" />

        <LinearLayout
            android:id="@+id/toggler_content_holder_LinearLayout_3"
            style="@style/StyleWidgetContentHolderCenter5x1"
            android:layout_above="@+id/toggler_state_ImageView_3" >

            <ImageButton
                android:id="@+id/toggler_content_ImageView_3"
                style="@style/StyleWidgetContent" />
        </LinearLayout>
    </RelativeLayout>

    <!-- ========== Fourth Content ====================================================================== -->

    <RelativeLayout
        android:id="@+id/widget_holder_RelativeLayout_4"
        style="@style/StyleWidgetContenHolder" >

        <TextView
            android:id="@+id/dummyBottom_TextView_4"
            style="@style/StyleDummySeparator" />

        <ImageView
            android:id="@+id/toggler_state_ImageView_4"
            style="@style/StyleWidgetContentStateCenter5x1"
            android:layout_above="@id/dummyBottom_TextView_4" />

        <LinearLayout
            android:id="@+id/toggler_content_holder_LinearLayout_4"
            style="@style/StyleWidgetContentHolderCenter5x1"
            android:layout_above="@+id/toggler_state_ImageView_4" >

            <ImageButton
                android:id="@+id/toggler_content_ImageView_4"
                style="@style/StyleWidgetContent" />
        </LinearLayout>
    </RelativeLayout>

    <!-- ========== Fifth Content ======================================================================= -->

    <RelativeLayout
        android:id="@+id/widget_holder_RelativeLayout_5"
        style="@style/StyleWidgetContenHolder" >

        <TextView
            android:id="@+id/dummyBottom_TextView_5"
            style="@style/StyleDummySeparator" />

        <ImageView
            android:id="@+id/toggler_state_ImageView_5"
            style="@style/StyleWidgetContentStateRight"
            android:layout_above="@id/dummyBottom_TextView_5" />

        <LinearLayout
            android:id="@+id/toggler_content_holder_LinearLayout_5"
            style="@style/StyleWidgetContentHolderRight"
            android:layout_above="@+id/toggler_state_ImageView_5" >

            <ImageButton
                android:id="@+id/toggler_content_ImageView_5"
                style="@style/StyleWidgetContent" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>